/* pages/answer/answer.wxss */
.banner{
  width: 100%;
  position: relative;
  background-color: #f4f4f4;
}
.banner .banner_img{
  width: 100%;
}
.banner .on{
  height: 100px;
  padding: 0 20px;
  position: absolute;
  top: 175px;
  left: 20px;
  right: 20px;
  /* width: 100%; */
  background-color: white;
  border-radius: 10px;
  border-bottom: 10px solid white;
}
.banner .on .text{
  color: #1E90FF;
  text-align: center;
  font-size: 14px;
}
.text_item{
  float: left;
  display: flex;
  margin-top: 20px;
  width: 25%;
}
.arrow{
  width: 5px;
  height: 5px;
  margin-left: 5px;
  /* margin-right: 10px; */
  margin-top: 5px;
  border: 2px solid #1e90ff;
  border-top: none;
  border-left: none;
  transform: rotate(45deg);
  float: left;
}
.on .search_item{
  margin-top: 40px;
  display: flex;
  justify-content: space-between;
}
.on .search{
  width: 85%;
  display: flex;
  border: 2px solid #f4f4f4;
  border-radius: 10px;
  margin: 20px 0;
  justify-content: space-between;
  
}
.on .search .search_img{
  width: 20px;
  height: 20px;
  color: #708090;
}
.on .search_btn{
  background-color: #38a1fb;
  border: 2px solid #38a1fb;
  border-radius: 7px;
  text-align: right;
}
.search_btn1{
  background-color: red;
  border-left: 2px solid red;
  border-right: 2px solid red;
  /* border-bottom: none; */
  border-radius: 7px;
  text-align: right;
  margin: 22px 0;
}

.center{
  /* padding: 10px 20px; */
  width: 100%;
  position: relative;
  /* display: flex; */
  margin-top: 50px;
  border-top: 10px solid #f4f4f4;
}
.center .school{
  display: flex;
  justify-content: space-between;
  border-left:20px solid #f4f4f4;
  border-right:20px solid #f4f4f4;
  border-top:5px solid #f4f4f4;
  border-bottom:5px solid #f4f4f4;
}
.center .school .school_info{
  margin:10px ;
  display: flex;
  justify-content:center;
  align-items:center;
  flex-direction: row;
}
.center .school .school_info .info_img{
  width: 80px;
  height: 80px;
}
.center .school .school_info .info_text{
  margin-left: 10px;
}
.center .school .school_consult{
  width: 100px;
  height: 25px;
  margin-top: 38px;
  margin-right: 10px;
  border-radius: 20px;
  background-color: #38a1fb;
  display: flex;
  justify-content:center;
  align-items:center;
  flex-direction: row;
}
.consult_img{
  width: 20px;
  height: 20px;
}
.consult_text{
  color: #ffffff;
}
.bottom{
  position: fixed;
  right: 10px;
  bottom: 10px;
}
.bottom .gotop{
  width: 40px;
  height: 40px;
  background: rgba(128, 128, 128, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
}
.bottom .gotop .gotop_img{
  width: 20px;
  height: 20px;
}
.bottom .req{
  width: 40px;
  height: 40px;
  background:rgba(56,161,251,0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  margin-top: 15px;
}
.bottom .req .req_text{
  font-size: 13px;
  color: #ffffff;
  margin-left: 6px;
}